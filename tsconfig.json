{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "outDir": "build",
        "jsx": "react"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/ts/**/*",
        "./src/js/**/*"
    ]
}