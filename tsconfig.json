{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "outDir": "src",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "utils": [
                "./src/utils.js"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/ts/**/*",
        "./src/js/**/*"
    ]
}